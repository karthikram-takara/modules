nextflow_process {

    name "Test Process BISCUIT_MERGECG"
    script "../main.nf"
    process "BISCUIT_MERGECG"
    tag "modules"
    tag "modules_nfcore"
    tag "biscuit"
    tag "biscuit/mergecg"

    test("sars_cov_bed") {

        setup {
            run("BISCUIT_INDEX") {
                script "../../index/main.nf"
                process {
                    """
                    input[0] = file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true)
                    """
                }
            }
        }
        when {
            process {
                """
                input[0] = [
                            [ id:'test', single_end:false ], // meta map
                            file('https://github.com/nf-core/test-datasets/raw/modules/data/delete_me/biscuit/test-cg.bed.gz', checkIfExists: true)
                        ]

                input[1] = BISCUIT_INDEX.out.index
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.mergecg_bed).match("out_bed") },
                { assert snapshot(process.out.versions).match("versions") }
            )
        }

    }

}
